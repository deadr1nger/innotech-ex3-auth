<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="create_user_table" author="deadringer">
        <createTable tableName="user">
            <column name="id" type="uuid" autoIncrement="false">
                <constraints primaryKey="true" primaryKeyName="pk_user_id"/>
            </column>
            <column name="email" type="varchar(255)"> <!-- Указать длину для varchar -->
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)"> <!-- Указать длину для varchar -->
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)"> <!-- Указать длину для varchar -->
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="jsonb">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="user" indexName="username_index">
            <column name="username"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>